separator_block_width=20
command="$HOME/.config/i3blocks/lib/$BLOCK_NAME"

[network]
interval=persist
markup=pango

[cpu-usage]
interval=persist
markup=pango

[memory-usage]
interval=10
markup=pango

[disk-usage]
interval=60
markup=pango

# TODO: Find a way to handle device switch. For example, when we plug in the
