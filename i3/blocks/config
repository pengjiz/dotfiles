separator_block_width=20
command="$HOME/.config/i3blocks/lib/$BLOCK_NAME"

[network]
interval=persist
markup=pango

[cpu-usage]
interval=persist
markup=pango

[memory-usage]
interval=10
markup=pango

[disk-usage]
interval=60
markup=pango

# TODO: Refresh block when switching devices, for example, when we plug in a
# headset. Right now volume block is not refreshed automatically in that case.
[volume]
interval=once
markup=pango
signal=1

[battery]
interval=persist
markup=pango

# TODO: Refresh block when resuming from suspension. Right now it is not updated
# immediately, so we will have the wrong time for a while.
[time]
interval=60

[weather]
interval=3600
markup=pango
