#!/bin/bash

set -e

file_dir="${SCREENSHOT_DIR:-$HOME/Pictures/screenshots}"
name_format="${SCREENSHOT_NAME_FORMAT:-%Y%m%d%H%M%S}"

mkdir -p "$file_dir"

case "$1" in
  # Capture the full screen
  screen)
    scrot -z "$file_dir/screen-$name_format.png"
    notify-send 'Screenshot' 'Screen captured' ;;
  # Capture a selected area
  area)
    scrot -s -z "$file_dir/area-$name_format.png"
    notify-send 'Screenshot' 'Selected area captured' ;;
  # Capture the current window
  window)
    scrot -u -z "$file_dir/window-$name_format.png"
    notify-send 'Screenshot' 'Focused window captured' ;;
  # Unknown operation
  *)
    echo "Unknown operation $1" >&2
    exit 1 ;;
esac
