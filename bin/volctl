#!/bin/bash

set -e

case "$1" in
  # Volume up by 5
  up)
    pactl set-sink-volume 0 +5% ;;
  # Volume down by 5
  down)
    pactl set-sink-volume 0 -5% ;;
  # Toggle mute
  mute)
    pactl set-sink-mute 0 toggle ;;
  # Unknown operation
  *)
    echo "Unknown operation $1" >&2
    exit 1 ;;
esac

# Refresh i3blocks
pgrep i3blocks && pkill -SIGRTMIN+1 i3blocks
